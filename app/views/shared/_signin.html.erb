<div id="signin-form">
  <%= form_for User.new, :remote => true do |f| %>
    <div class="field">
      <%= f.text_field :email, placeholder: "email", class: "small-form-field" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: "password", class: "small-form-field" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign in" %>
    </div>
  <% end %>
</div>
